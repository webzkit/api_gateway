{
    "openapi": "3.0.3",
    "info": {
        "title": "Dynamic API",
        "version": "1.0.0"
    },
    "paths": {
        "/users/": {
            "get": {
                "summary": "Lấy danh sách người dùng",
                "operationId": "get_users",
                "tags": ["Users"],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": { "$ref": "#/components/schemas/Item" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Tạo người dùng mới",
                "operationId": "create_user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Item" }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Item" }
                            }
                        }
                    }
                }
            }
        },
        "/products/": {
            "get": {
                "summary": "Lấy danh sách sản phẩm",
                "operationId": "get_products",
                "tags": ["Products"],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": { "$ref": "#/components/schemas/Item" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Tạo sản phẩm mới",
                "operationId": "create_product",
                "tags": ["Products"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Item" }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Item" }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Item": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" },
                    "description": { "type": "string", "nullable": true }
                },
                "required": ["id", "name"]
            }
        }
    }
}